pipeline {
    agent any

    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    environment {
        KUBE_NAMESPACE = "devops"
        DOCKER_IMAGE = "student-management:latest"
    }

    stages {

        stage('üì• Checkout Code') {
            steps {
                checkout scm
                script {
                    env.GIT_COMMIT_SHORT = env.GIT_COMMIT.take(7)
                    env.IMAGE_TAG = "${DOCKER_IMAGE}-${GIT_COMMIT_SHORT}"
                }
            }    
        }

        stage('üèóÔ∏è Build Maven') {
            steps {
                    sh 'mvn clean package -DskipTests'
            }
        }

        stage('üê≥ Build Docker Image ') {
            steps {
                    sh """
                        echo "Configuring Docker to use Minikube daemon..."
                        eval \\$(minikube docker-env)
                        
                        docker build -t ${IMAGE_TAG} .
                        
                        echo "Verifying image was built..."
                        docker images | grep ${IMAGE_TAG}
                    """
             }
        }

        stage('üì¶ Deploy Kubernetes ') {
            steps {
                sh """
                    kubectl set image deployment/spring-app spring-app=${IMAGE_TAG} -n devops
                    kubectl rollout status deployment/spring-app -n devops
                """
            }
    }

    post {
        success {
            echo "‚úÖ D√©ploiement r√©ussi!"
        }
        failure {
            echo "‚ùå √âchec du pipeline"
        }
        always {
            cleanWs()
        }
    }
}
